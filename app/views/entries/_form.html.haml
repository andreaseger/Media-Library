- form_for @entry do |f|
  = f.error_messages
  %p
    = f.label :title
    %br
    = f.text_field :title
  %p
    = f.label :year
    %br
    = f.text_field :year
  %p
    = f.label :imdb
    %br
    = f.text_field :imdb
  %p
    = f.label :nfo
    %br
    = f.text_area :nfo
  %p
    = f.label :media_typ
    %br
    = f.radio_button :media_typ, true
    Movie
    = f.radio_button :media_typ, false
    TV Show
    =# f.check_box :media_typ
  %p
    = f.label :quality
    %br
    = form.collection_select :quality, ENTRY::QUALITIES, :to_s, :humanize
  %p
    = f.submit

