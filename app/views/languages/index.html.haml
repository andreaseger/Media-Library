- title "Languages"

%table
  %tr
    %th Long
    %th Short
  - for language in @languages
    %tr
      %td= language.long
      %td= language.short
      %td= link_to 'Show', language
      %td= link_to 'Edit', edit_language_path(language)
      %td= link_to 'Destroy', language, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Language", new_language_path
